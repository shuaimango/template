<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edittext_common" parent="android:Widget.Holo.Light.EditText">
        <item name="android:cursorVisible">true</item>
        <item name="colorControlNormal">@color/gray9</item>
        <item name="colorControlActivated">@color/app_color</item>
        <item name="android:textColor">@color/black3</item>
        <item name="android:textColorHint">@color/gray0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="bottom_button" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/salmon</item>
<!--
        <item name="android:background">@drawable/shape_stroke_gray</item>
-->
        <item name="android:gravity">center</item>
    </style>
</resources>
